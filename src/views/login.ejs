<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">    
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Login</h1>
            <p class="text-center lead">Faça seu login ou crie uma conta abaixo</p>

            <%- include('includes/messages') %>

            <div class="row">

                <div class="col-lg">
                    <h2>Faça seu cadastro</h2>
                    <p>se você ainda não tem um usuário</p>
                    <form action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value= <%= csrfToken %>>
                        <div class="form-group">
                          <label>Email</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label>Senha</label>
                            <input type="password" class="form-control" name="password">
                          </div>
                        <button type="submit" class="btn btn-primary mt-1">Criar minha conta</button>
                    </form>
                </div>


                <div class="col-lg">
                    <h2>Login</h2>
                    <p>caso você já tenha um usuário</p>
                    <form action="/login/login" method="POST">
                        <input type="hidden" name="_csrf" value= <%= csrfToken %>>  
                        <div class="form-group">
                          <label>Email</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label>Senha</label>
                            <input type="password" class="form-control" name="password">
                          </div>
                        <button type="submit" class="btn btn-primary mt-1">Login</button>
                      </form>
                    
                </div>
            </div>
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>

    